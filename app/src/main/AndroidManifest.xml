<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sasa.zavrsni">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.example.sasa.zavrsni.ListActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:icon="@mipmap/ic_launcher"
            android:label="Actors">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.example.sasa.zavrsni.DetailActivity"
            android:icon="@mipmap/ic_launcher"
            android:label="Actor Detail"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.example.sasa.zavrsni.preferences.PripremaPrefererences"
            android:label="@string/activity_settings_name"
            android:parentActivityName="com.example.sasa.zavrsni.ListActivity"
            android:theme="@style/AppTheme.NoActionBar" />


    </application>

</manifest>